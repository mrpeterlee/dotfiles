  - monitor:
      layout: tiled
      panes:
        - glances:
            - cd
            # Build latest lean
            - bash /lab/paper/ts/lean/bin/Build-Custom-Lean
            - bash /lab/paper/ts/lean/bin/Build-Custom-Lean --tester

            # Build datalab
            - . parse_yml ${HOME}/.lab/github.yml && cd /lab/paper/datalab_core && make build
            - bash -c ". parse_yml ${HOME}/.lab/github.yml && cd /lab/paper/datalab_core && make build && make push"
            - bash -c ". parse_yml ${HOME}/.lab/github.yml && cd /lab/prod/datalab_core && git checkout prod && git fetch --all && git reset --hard origin/main && make build labenv=prod dbenv=prod && make push labenv=prod dbenv=prod"

            # Build datalab_equities
            - cd /lab/paper/datalab_equities
            - docker build . --file ./Dockerfile --tag {{ .infra.docker_registry }}/inteclab/datalab_equities/datalab_equities:latest --build-arg image_url={{ .infra.docker_registry }}/inteclab/datalab_core/datalab_core:latest
            - docker push {{ .infra.docker_registry }}/inteclab/datalab_equities/datalab_equities:latest

            - cd /lab/prod/datalab_equities
            - docker build . --file ./Dockerfile --tag {{ .infra.docker_registry }}/inteclab/datalab_equities/datalab_equities:prod --build-arg image_url={{ .infra.docker_registry }}/inteclab/datalab_core/datalab_core:prod
            - docker push {{ .infra.docker_registry }}/inteclab/datalab_equities/datalab_equities:prod

            # Build datalab_crypto
            - cd /lab/paper/datalab_crypto
            - docker build . --file ./Dockerfile --tag {{ .infra.docker_registry }}/inteclab/datalab_crypto/datalab_crypto:latest --build-arg image_url={{ .infra.docker_registry }}/inteclab/datalab_core/datalab_core:latest
            - docker push {{ .infra.docker_registry }}/inteclab/datalab_crypto/datalab_crypto:latest

            - cd /lab/prod/datalab_crypto
            - docker build . --file ./Dockerfile --tag {{ .infra.docker_registry }}/inteclab/datalab_crypto/datalab_crypto:prod --build-arg image_url={{ .infra.docker_registry }}/inteclab/datalab_core/datalab_core:prod
            - docker push {{ .infra.docker_registry }}/inteclab/datalab_crypto/datalab_crypto:prod

