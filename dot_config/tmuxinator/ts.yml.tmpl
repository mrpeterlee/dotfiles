          #       - cpu_temperature:
          #         - watch -n 10 -d sensors

  - background-apps:
      layout: tiled
      panes:
        - jupyter-notebook:
            - if [ "$SHELL" = "/bin/sh" ]; then zsh; fi;
            - conda deactivate && conda activate paper
            - export JUPYTER_ASCENDING_EXECUTE_PORT=60000
            - export JUPYTER_PORT=60000
            - export JUPYTER_PORT_RETRIES=0
            - jupyter notebook --port=$JUPYTER_PORT --no-browser --NotebookApp.token="" --notebook-dir=$HOME
        - neovim-headless:
            - if [ "$SHELL" = "/bin/sh" ]; then zsh; fi;
            - nvim /lab/paper/astronvim/polish.lua --headless --listen {{ .infra.internal_ip }}:{{ .infra.internal_port }}
