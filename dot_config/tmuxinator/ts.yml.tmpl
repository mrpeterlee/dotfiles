          # - cd $HOME/ts

  - atronvim:
      layout: even-horizontal
      panes:
        - workspace1:
            - if [ "$SHELL" = "/bin/sh" ]; then zsh; fi;
            - cd /lab/paper/astronvim
        - workspace2:
            - if [ "$SHELL" = "/bin/sh" ]; then zsh; fi;

  - flightlog:
      layout: even-horizontal
      panes:
        - pane1:
            - if [ "$SHELL" = "/bin/sh" ]; then zsh; fi;
            - cd $HOME/lab/paper
        - pane2:
            - if [ "$SHELL" = "/bin/sh" ]; then zsh; fi;
            - cd $HOME/lab/paper
            - ts flightlog stream -d

  - server-monitor:
      layout: tiled
      panes:
        - glances:
            - if [ "$SHELL" = "/bin/sh" ]; then zsh; fi;
            - cd
          #- glances

          # - docker-monitor:
